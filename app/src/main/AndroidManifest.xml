<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.countries">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Fun Facts"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Countries">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Fun Facts"
            android:theme="@style/Theme.Countries.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DateActivity"
            android:exported="true"
            android:label="Date"></activity>
        <activity
            android:name=".YearActivity"
            android:exported="true"
            android:label="Year"></activity>
        <activity
            android:name=".MathActivity"
            android:exported="true"
            android:label="Math"></activity>
        <activity
            android:name=".RandomActivity"
            android:exported="true"
            android:label="Random"></activity>
        <activity
            android:name=".TriviaActivity"
            android:exported="true"
            android:label="Trivia"></activity>
    </application>

</manifest>